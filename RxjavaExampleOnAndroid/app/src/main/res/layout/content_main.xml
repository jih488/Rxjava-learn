<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.zzc.android.rxjavaexampleonandroid.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_base_observable_create"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="基本的Observable创建"
                />
            <Button
                android:id="@+id/btn_timer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="timer操作符"
                />
            <Button
                android:id="@+id/btn_interval"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="interval操作符"
                />
            <Button
                android:id="@+id/btn_merge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="merge操作符"
                />
            <Button
                android:id="@+id/btn_zip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="zip操作符"
                />
            <Button
                android:id="@+id/btn_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="contact操作符"
                />

            <Button
                android:id="@+id/btn_debounce"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="debounce操作符"
                />

            <Button
                android:id="@+id/btn_flatmap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="flatmap操作符"
                />
            <Button
                android:id="@+id/btn_combineLatest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="combineLatest操作符"
                />
            <Button
                android:id="@+id/btn_multi_thread"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="多线程并发"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
